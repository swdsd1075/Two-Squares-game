shader_type canvas_item;

uniform vec4 glow_color : source_color = vec4(1.0, 0.8, 0.2, 1.0); // لون التوهج
uniform float glow_strength : hint_range(1.0, 5.0) = 3.0;          // قوة التوهج

void fragment() {
    vec4 tex = texture(TEXTURE, UV);
    COLOR = tex * glow_color;
    COLOR.rgb *= glow_strength; // يرفع السطوع عشان يبان مع الـGlow
}